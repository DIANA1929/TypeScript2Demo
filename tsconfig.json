{
    "compilerOptions": {
        //en que version
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        
        "sourceMap": false
    },
    //cada que guarda compila los archivos con compileOnSave
    "compileOnSave": false,
    "filesGlob": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!node_modules/**"
    ]
}